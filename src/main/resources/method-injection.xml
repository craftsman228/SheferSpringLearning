<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <bean id="helper" class="com.begin.chapter3.MethodInjection.MyHelper" scope="prototype"/>

    <bean id="abstractBean" class="com.begin.chapter3.MethodInjection.AbstractLookupDemoBean">
        <lookup-method name="getMyHelper" bean="helper"/>
    </bean>

    <bean id="standartLookupBean" class="com.begin.chapter3.MethodInjection.StandartLookupDemoBean">
        <property name="myHelper">
            <ref bean="helper"/>
        </property>
    </bean>
</beans>